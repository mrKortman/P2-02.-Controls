<Window x:Class="P2_02.Controls.StackPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:P2_02.Controls"
        mc:Ignorable="d"
        Title="StackPanel" Height="300" Width="300">
    <StackPanel Orientation="Horizontal">
        <Button Name="btnButtonA" Content="ButtonA" Background="Green"></Button>
        <Button Name="btnButtonB" Content="ButtonB" Background="Yellow"></Button>
        <Button Name="btnButtonC" Content="ButtonC" Background="Blue"></Button>
        <Button Name="btnButtonD" Content="ButtonD" Background="Red"></Button>
    </StackPanel>
</Window>
